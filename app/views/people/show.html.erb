      <tr>
        <th>Course</th>
        <th>Code</th>
        <th>Teacher</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.code %></td>
          <td><%= course.person.first_name + " " + course.person.last_name %></td>
        </tr>
      <% end %>
    </tbody>
</table>
